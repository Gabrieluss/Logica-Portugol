algoritmo "soma_numeros"

var
num1, num2, resp : real

inicio
// Seção de Comandos
   escreva1("Calculadora para somar dois números")
   escreva1("Insira o primeiro número")
   leia(num1)
   escreva1("Insira o segundo número")
   leia(num2)
   resp <- num1 + num2
   escreva("O resultado da soma é ", resp)
   
fimalgoritmo
